extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Location Information

  .row
    .col-xs-12
      h2 Location Details
      .image-container
        h3 Pasta Palace
        
        // Arrange images in a grid
        .row
          .col-xs-6.col-md-4
            img(src="/images/pasta-palace.jpg", alt="Pasta Palace Image 1", class="img-responsive", style="margin-bottom: 10px;")
          .col-xs-6.col-md-4
            img(src="/images/pasta-palace1.jpg", alt="Pasta Palace Image 2", class="img-responsive", style="margin-bottom: 10px;")
          .col-xs-6.col-md-4
            img(src="/images/pasta-palace2.jpg", alt="Pasta Palace Image 3", class="img-responsive", style="margin-bottom: 10px;")
          .col-xs-6.col-md-4
            img(src="/images/pasta-palace-3.jpg", alt="Pasta Palace Image 4", class="img-responsive", style="margin-bottom: 10px;")
          .col-xs-6.col-md-4
            img(src="/images/pasta-palace4.jpg", alt="Pasta Palace Image 5", class="img-responsive", style="margin-bottom: 10px;")

      p
        | Pasta Palace is a popular restaurant known for its exceptional Pasta's in the city. 
        | The outdoor seating provides a relaxing atmosphere, perfect for enjoying a meal with friends and family.
      
      p
        | Address: 345 Elm Avenue, Springfield, ST 12345

      // Embed Google Map
      .map-container
        h3 Find Us Here
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835434509887!2d144.9537353153167!3d-37.81627997975169!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11d9b1%3A0x5045675218ceed30!2s345%20Elm%20Avenue%2C%20Springfield%2C%20ST%2012345!5e0!3m2!1sen!2sus!4v1634567890123!5m2!1sen!2sus', width='100%', height='300', style='border:0;', allowfullscreen='', loading='lazy')

      .panel.panel-primary
        .panel-heading
          h2.panel-title Opening Hours
        .panel-body
          p Monday - Friday: 11:00am - 10:00pm
          p Saturday: 12:00pm - 11:00pm
          p Sunday: 12:00pm - 9:00pm

      .panel.panel-primary
        .panel-heading
          h2.panel-title Facilities
        .panel-body
          span.label.label-warning
            span.glyphicon.glyphicon-ok
            | &nbsp;Sushi
          | &nbsp;
          span.label.label-warning
            span.glyphicon.glyphicon-ok
            | &nbsp;Italian Cuisine
          | &nbsp;
          span.label.label-warning
            span.glyphicon.glyphicon-ok
            | &nbsp;Outdoor seating

      .panel.panel-primary.review-panel
        .panel-heading
          a.btn.btn-default.pull-right(href='/location/review/new') Add review
          h2.panel-title Customer Reviews
        .panel-body.review-container
          .row
            .review
              .well.well-sm.review-header
                span.rating
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                span.reviewAuthor  Rithik
                small.reviewTimestamp  10 October 2023
              .col-xs-12
                p The Pasta here is amazing! The outdoor seating makes it even better.
          .row
            .review
              .well.well-sm.review-header
                span.rating
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                  span.glyphicon.glyphicon-star
                span.reviewAuthor  Hemanth
                small.reviewTimestamp  5 October 2023
              .col-xs-12
